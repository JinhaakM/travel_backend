package net.daum.dao;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;

import net.daum.vo.ChatVO;
import net.daum.vo.MessageVO;

public interface MessageRepository extends JpaRepository<MessageVO, Long> {

	@Modifying
	@Query("INSERT INTO MessageVO (chat, messageText) SELECT c, :messageText FROM ChatVO c WHERE c.chatNo = :chatNo")
	void setMessage(String chatNo, String messageText);

	
}
